{
  "version": 2,
  "alias": ["stepzero.now.sh"],
  "builds": [
    {
      "src": "/web/package.json",
      "use": "@now/next",
      "config": { "maxLambdaSize": "10mb" }
    },
    { "src": "/web/static/**", "use": "@now/static" },
    { "src": "/api/*.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    { "src": "/(.*)", "dest": "/web/$1" },
    { "src": "/static/(.*)", "dest": "/web/static/$1" }
  ]
}
